<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<xml>
  <application default_format="html" default_route="index" version="1.0.0">
    <paths controllers="tests/mocks/controllers" views="tests/mocks/views" resolvers="tests/mocks/resolvers" validators="tests/mocks/validators"/>
  </application>
  <resolvers>
    <resolver format="html" content_type="text/html" class="HtmlResolver" charset="UTF-8"/>
    <resolver format="json" content_type="application/json" class="JsonResolver" charset="UTF-8"/>
  </resolvers>
  <routes>
  	<route id="users" controller="UsersController" view="users" format="html" method="GET"/>
  	<route id="user/(name)" controller="BlogController" view="blog" format="json" method="GET">
  		<parameter name="name" validator="UserNameValidator" mandatory="1"/>
  	</route>
  </routes>
  <session https_only="1" headers_only="1"/>
  <cookies https_only="1" headers_only="1"/>
</xml>
